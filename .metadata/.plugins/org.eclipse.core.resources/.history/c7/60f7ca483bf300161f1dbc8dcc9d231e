package lab5;
import balloon2.Balloon;
import org.junit.Test;
import static org.junit.Assert.*;
import org.junit.Before;

public class BalloonTestsBugs {
	private static final double EPSILON = 10e-07;
	private Balloon b;
	
	@Before
	public void setup() {
		b = new Balloon(10);
	}
	
	@Test
	public void testBalloonRadius() {
		String s = "A newly constructed Balloon should have radius zero.";
		assertEquals(s, 0, b.getRadius());
	}
	
	@Test
	public void testBalloonDeflate() {
		String s = "After calling deflate() on a Balloon, the radius should be 0";
		b.blow(5);
		b.deflate();
		assertEquals(s, 0, b.getRadius(), EPSILON);
	}
	
	@Test
	public void testBalloonPop() {
		String s = "After calling pop() on a balloon, the radius should be 0";
		String s2 = "After calling pop() on a balloon, isPopped should be true";
		b.blow(5);
		b.pop();
		assertEquals(s, 0, b.getRadius());
		assertEquals(s2, true, b.isPopped());
	}
	
	@Test
	public void testBalloonIsPopped() {
		String s = "A newly constructed Balloon should not be popped.";
		assertEquals(s, false, b.isPopped());
	}
	
	@Test
	public void testBalloonBlow() {
		String s = "After calling blow(5) on a Balloon with maximum radius 10, the radius should be 5.";
		b.blow(5);
		assertEquals(s, 5, b.getRadius());
	}
}
